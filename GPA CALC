<body>
    <div class="container">
        <h1>Student GPA Calculator</h1>
        <form id="gpa-form">
            <div class="course-row">
                <input type="text" placeholder="Course Name" required>
                <select required>
                    <option value="">Select Grade</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
            </div>
            <div class="course-row">
                <input type="text" placeholder="Course Name" required>
                <select required>
                    <option value="">Select Grade</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
            </div>
            <div class="course-row">
                <input type="text" placeholder="Course Name" required>
                <select required>
                    <option value="">Select Grade</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
            </div>
            <button type="submit" class="calculate-button">Calculate GPA</button>
        </form>
        <div id="gpa-result"></div>
        <div class="button-container">
            <button type="button" class="add-course-button" id="add-course">Add Another Course</button>
        </div>
    </div>
    <script>
        const gpaForm = document.getElementById('gpa-form');
        const gpaResult = document.getElementById('gpa-result');
        const addCourseButton = document.getElementById('add-course');

        const gradePoints = {
            'A': 4,
            'B': 3,
            'C': 2,
            'D': 1,
            'F': 0
        };

        function calculateGPA(event) {
            event.preventDefault();
            const courseRows = Array.from(gpaForm.querySelectorAll('.course-row'));
            let totalPoints = 0;
            let totalCourses = 0;
            let hasEmptyFields = false;

            courseRows.forEach(row => {
                const courseNameInput = row.querySelector('input[type="text"]');
                const gradeSelect = row.querySelector('select');

                if (!courseNameInput.value.trim() || !gradeSelect.value) {
                    hasEmptyFields = true;
                    return;
                }

                const grade = gradeSelect.value;
                const points = gradePoints[grade];
                if (points !== undefined) {
                    totalPoints += points;
                    totalCourses++;
                }
            });

            if (hasEmptyFields) {
                gpaResult.textContent = "Please fill in all course names and grades.";
                gpaResult.style.color = "red";
                return;
            }

            if (totalCourses === 0) {
                gpaResult.textContent = "No courses entered.";
                gpaResult.style.color = "#003366";
                return;
            }

            const gpa = (totalPoints / totalCourses).toFixed(2);
            gpaResult.textContent = `Your GPA is: ${gpa}`;
            gpaResult.style.color = "#003366";
        }

        function addCourseRow() {
            const newCourseRow = document.createElement('div');
            newCourseRow.className = 'course-row';
            newCourseRow.innerHTML = `
                <input type="text" placeholder="Course Name" required>
                <select required>
                    <option value="">Select Grade</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
            `;
            gpaForm.insertBefore(newCourseRow, gpaForm.querySelector('.calculate-button'));
        }

        gpaForm.addEventListener('submit', calculateGPA);
        addCourseButton.addEventListener('click', addCourseRow);
    </script>
</body>
